                                                <span class="item-course-info-cf-price">300.000đ</span>
                                                <span class="float-right hidden-sm hidden-xs">
                                                    {{course.CountStudent | number}}&nbsp;
                                                    <span class="fa fa-user float-right"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>


                        <h3>
                            <span>KHÓA HỌC NỔI BẬT<i class="fa fa-angle-right"></i></span>
                            <!--<span class="float-right hidden-xs">Xắp Xếp Theo</span>-->
                        </h3>
                    </div>
                    <div id="featured-course" class="polet-content owl-container">

                        <data-owl-carousel class="data-owl-carousel" data-owl-carousel="">
                            <div owl-carousel-item="" ng-repeat="course in ::Course" class="item">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 item-course padding-bottom-xs-10">
                                    <div class="item-inner">
                                        <div class="item-course-img">

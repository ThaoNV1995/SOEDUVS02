<style>
    .cf_title .ico_star {
        position: relative;
        top: 4px;
    }

    .ico_star {
        font-size: 16px;
        position: relative;
        display: inline-block;
        letter-spacing: 3px;
    }

        .ico_star:before {
            content: "\f006 \f006 \f006 \f006 \f006";
            color: #D6D6D6;
        }

    .ico_star_value {
        position: absolute;
        left: 0;
        top: 0;
        overflow: hidden;
        white-space: nowrap;
    }

        .ico_star_value:before {
            content: "\f006 \f006 \f006 \f006 \f006";
            color: #F1CD2F;
        }

    #owl-demo .item {
        margin: 3px;
    }

        #owl-demo .item img {
            display: block;
            width: 100%;
            height: auto;
        }
</style>


